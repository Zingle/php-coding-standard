<?xml version="1.0"?>
<ruleset name="Zingle">
    <description>The Zingle coding standard.</description>

    <rule ref="vendor/escapestudios/symfony2-coding-standard/Symfony">
        <exclude name="Symfony.Commenting.License.Warning" />
        <exclude name="Symfony.Commenting.FunctionComment.MissingParamComment" />
        <exclude name="Symfony.Functions.Arguments.Invalid" />
        <exclude name="Zend.NamingConventions.ValidVariableName.MemberVarContainsNumbers" />
    </rule>
</ruleset>
